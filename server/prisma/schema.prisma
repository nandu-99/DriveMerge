// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  name           String?
  password       String?   // null for OAuth-only accounts
  googleId       String?  @unique
  profilePicture String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // one user â†’ many Drive accounts
  driveAccounts  DriveAccount[]
  files          File[]
  transferJobs   TransferJob[]
}

model DriveAccount {
  id            Int      @id @default(autoincrement())
  userId        Int
  email         String
  refreshToken  String   @db.VarChar(1000)
  accessToken   String?  @db.Text 
  usedSpaceGb   Float
  totalSpaceGb  Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  files         File[]
  fileChunks    FileChunk[]  // Opposite relation field

  @@unique([userId, email])
}

model File {
  id           Int      @id @default(autoincrement())
  driveFileId  String   @unique
  userId       Int
  driveAccountId Int?
  name         String
  mime         String?
  sizeBytes    BigInt
  fileHash     String?  @db.VarChar(128)
  
  // File splitting & Encryption support
  isSplit        Boolean  @default(false)
  encryptionKey  String?  @db.Text // Encrypted (or simple) key for client-side decryption
  iv             String?  @db.VarChar(255) // Helper IV if needed at file level

  createdAt    DateTime @default(now())

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  driveAccount DriveAccount? @relation(fields: [driveAccountId], references: [id], onDelete: Cascade)
  chunks       FileChunk[]
}

model FileChunk {
  id             Int      @id @default(autoincrement())
  fileId         Int
  driveAccountId Int
  driveFileId    String
  chunkIndex     Int
  sizeBytes      BigInt
  iv             String?  @db.VarChar(255) // IV for this specific chunk
  createdAt      DateTime @default(now())

  file           File         @relation(fields: [fileId], references: [id], onDelete: Cascade)
  driveAccount   DriveAccount @relation(fields: [driveAccountId], references: [id], onDelete: Cascade)

  @@index([fileId, chunkIndex])
}

model TransferJob {
  id             Int      @id @default(autoincrement())
  uploadId       String   @unique
  userId         Int
  fileName       String
  status         String   // pending, in_progress, succeeded, failed
  totalBytes     BigInt?
  transferredBytes BigInt? 
  errorMessage   String?  @db.Text
  driveFileId    String?  // resulting Drive file id when succeeded
  sourceAccountId Int?
  destAccountId   Int?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
